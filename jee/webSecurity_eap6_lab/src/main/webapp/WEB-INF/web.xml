<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <!-- 
        - allow unchecked access to web context beginning with 'unchecked' context path
        - achieved by omitting the authorization constraints (auth-constraint) element
        - NOTE:  JAAS implementation will not even attempt to authenticate principal of HTTP request
    -->
    <security-constraint>
        <display-name>un restricted access using any http verb</display-name>
        <web-resource-collection>
            <web-resource-name>All Access</web-resource-name>
            <url-pattern>/unchecked/*</url-pattern>
            <http-method>DELETE</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>



    <!-- 
        - allow access to restricted list of roles
    -->
    <security-constraint>
        <display-name>Restricted GET To owner, manager or finance</display-name>
        <web-resource-collection>
            <web-resource-name>Restricted Access - Get Only</web-resource-name>
            <url-pattern>/checked/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>owner</role-name>
            <role-name>manager</role-name>
            <role-name>finance</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>



    <!-- 
        - set specified context path off limits to all roles
    -->
    <security-constraint>
        <display-name>off limits to all </display-name>
        <web-resource-collection>
            <url-pattern>/offlimits/*</url-pattern>
            <http-method>DELETE</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint />
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>default</realm-name>
    </login-config>

</web-app>

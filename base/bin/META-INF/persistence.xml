<?xml version="1.0" encoding="UTF-8"?>
<!-- example of reference to a cfg.xml file -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="jta_EMF" transaction-type="JTA">
        <jta-data-source>java:/global/lab_ds</jta-data-source>
        <properties>
            <property name="hibernate.dialect" value="${hibernate.dialect}" />
            <property name="show_sql" value="${hibernate.show_sql}" />
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.connection.isolation" value="2"/> <!-- READ_COMMITTED -->
            <property name="jboss.entity.manager.factory.jndi.name" value="java:/global/lab_ds_EMF"/>

            <!-- For details concerning the options, see the following :    http://www.jroller.com/eyallupu/entry/hibernate_s_hbm2ddl_tool -->
            <property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="resource_local_EMF" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>java:/global/lab_ds</non-jta-data-source>
        <properties>
            <property name="hibernate.dialect" value="${hibernate.dialect}" />
            <property name="show_sql" value="${hibernate.show_sql}" />
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.connection.isolation" value="2"/> <!-- READ_COMMITTED -->
            <property name="jboss.entity.manager.factory.jndi.name" value="java:/global/lab_ds_EMF_Resource_Local"/>

            <!-- For details concerning the options, see the following :    http://www.jroller.com/eyallupu/entry/hibernate_s_hbm2ddl_tool -->
            <property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}"/>
        </properties>
    </persistence-unit>
</persistence>

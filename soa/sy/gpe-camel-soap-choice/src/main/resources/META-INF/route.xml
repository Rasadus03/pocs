<route xmlns="http://camel.apache.org/schema/spring">
    <from uri="switchyard://ICamelChoice" />
    <log message="CamelChoice org.switchyard.operationName = ${header.org.switchyard.operationName}" />
    <choice>
         <when>
            <simple>${header.org.switchyard.operationName} == 'modifyField1'</simple>
            <log message="CamelChoice body = ${body}" />
            <to uri="switchyard://IBeanOne" />
        </when>
        <when>
            <simple>${header.org.switchyard.operationName} == 'modifyField2'</simple>
            <log message="CamelChoice body = ${body}" />
            <to uri="switchyard://IBeanTwo" />
        </when>
        <otherwise>
            <log message="CamelRoute: unknown destination:  ${header.org.switchyard.operationName}" />
        </otherwise>
    </choice>
</route>

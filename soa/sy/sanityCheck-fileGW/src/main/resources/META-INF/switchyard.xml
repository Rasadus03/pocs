<?xml version="1.0" encoding="UTF-8"?>
<switchyard xmlns="urn:switchyard-config:switchyard:1.0" xmlns:bean="urn:switchyard-component-bean:config:1.0" xmlns:camel="urn:switchyard-component-camel:config:1.0" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912">
  <sca:composite name="sanityCheck-fileGW" targetNamespace="urn:org.jboss.gpse:sanityCheck-fileGW:0.0.1-SNAPSHOT">a

    <sca:component name="SanityCheck">
      <bean:implementation.bean class="org.jboss.gpse.SanityCheckBean"/>
      <sca:service name="SanityCheck">
        <sca:interface.java interface="org.jboss.gpse.SanityCheck"/>
      </sca:service>
    </sca:component>

    <sca:service name="SanityCheck" promote="SanityCheck/SanityCheck">
      <sca:interface.java interface="org.jboss.gpse.SanityCheck"/>
      <camel:binding.file>
        <contextMapper/>
        <camel:operationSelector operationName="health"/>
        <camel:directory>/tmp</camel:directory>
        <camel:autoCreate>true</camel:autoCreate>
        <camel:fileName>test.txt</camel:fileName>
        <camel:consume>
          <camel:preMove>.working</camel:preMove>
          <camel:moveFailed>.failed</camel:moveFailed>
        </camel:consume>
      </camel:binding.file>
    </sca:service>

  </sca:composite>
</switchyard>
